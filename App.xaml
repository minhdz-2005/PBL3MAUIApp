<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:PBL3MAUIApp"
             x:Class="PBL3MAUIApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary Source="Views/CashierView/Templates.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <!-- Kích thước font cho menu -->
            <x:Double x:Key="MenuFontSize">20</x:Double>

            <!-- Padding và Margin động -->
            <Thickness x:Key="MenuItemPadding">8,4</Thickness>
            <Thickness x:Key="MenuItemMargin">10,0</Thickness>

            <!-- Kích thước ảnh động -->
            <x:Double x:Key="NavIconSize">30</x:Double>
            <x:Double x:Key="NavBoxSize">60</x:Double>
        </ResourceDictionary>
    </Application.Resources>
</Application>
