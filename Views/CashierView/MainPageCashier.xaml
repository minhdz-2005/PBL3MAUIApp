<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="PBL3MAUIApp.Views.CashierView.MainPageCashier"
    ControlTemplate="{StaticResource SharedPageTemplate}"
    Shell.NavBarIsVisible="False">

    <!-- Ảnh nền -->
    <Grid>
        <!-- Ảnh nền full màn hình -->
        <Image Source="program.jpg"
               Aspect="AspectFill"
               ZIndex="0" />

        <!-- Lớp phủ màu đen nhẹ -->
        <BoxView Color="#66000000"
                 ZIndex="1" />
        <!-- Nội dung chào -->
        <Grid
            HorizontalOptions="Fill"
            VerticalOptions="Fill"
            ZIndex="2">
            <Label Text="Hello, Have a nice day!"
                   FontSize="{OnPlatform Default=36, MacCatalyst=28, Android=30, iOS=30}"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   Margin="24"
                   x:Name="MyLabel"/>
        </Grid>
    </Grid>

</ContentPage>
