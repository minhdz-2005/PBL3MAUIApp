<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="PBL3MAUIApp.Views.CashierView.UuDaiPage"
    ControlTemplate="{StaticResource SharedPageTemplate}"
    BackgroundColor="#F7EFE9"
    xmlns:viewModels="clr-namespace:PBL3MAUIApp.ViewModels"
    NavigationPage.HasNavigationBar="False">

    <ContentPage.BindingContext>
        <viewModels:CashierViewModel />
    </ContentPage.BindingContext>

    <Grid Padding="15" RowDefinitions="Auto,*">

        <!-- Header -->
        <VerticalStackLayout Grid.Row="0" Spacing="5">
            <Label Text="ðŸŽ" FontSize="32" HorizontalOptions="Center"/>
            <Label Text="LIST VOUCHER"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="#4B3621"
                   HorizontalOptions="Center"/>
            <Label Text="Special voucher"
                   FontSize="16"
                   TextColor="#7B6A54"
                   HorizontalOptions="Center"
                   Margin="0,0,0,20"/>
        </VerticalStackLayout>

        <!-- Main Content -->
        <Frame Grid.Row="1"
               BackgroundColor="White"
               BorderColor="#F2E2D6"
               CornerRadius="15"
               Padding="20"
               HasShadow="False">

            <Grid ColumnDefinitions="350,*" ColumnSpacing="20">

                <!-- Left Panel - Info Display -->
                <Frame 
                    Grid.Column="0"
                    BackgroundColor="#4B3621"
                    CornerRadius="12"
                    Padding="40"
                    HasShadow="False">
                    <ScrollView>
                        <VerticalStackLayout Spacing="10">
                            <Label 
                                Text="LIST VOUCHER" 
                                TextColor="White" 
                                FontSize="18"
                                FontAttributes="Bold"
                                Margin="0,0,0,10"/>
                            <CollectionView ItemsSource="{Binding VoucherVM.VoucherList}">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>

                                        <!-- ID Æ°u Ä‘Ã£i -->
                                        <Border 
                                            StrokeShape="RoundRectangle 8" 
                                            Stroke="White" 
                                            StrokeThickness="1"
                                            Padding="5">
                                            <Button 
                                                x:Name="VoucherSelectButton"
                                                Style="{StaticResource HoverButtonStyle}"
                                                Text="{Binding Code}"
                                                TextColor="White"
                                                VerticalOptions="Fill"
                                                HorizontalOptions="Fill"
                                                Clicked="OnVoucherButtonClicked"/>
                                        </Border>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </VerticalStackLayout>
                    </ScrollView>
                </Frame>

                <!-- Right Panel - Promotions List -->
                <Grid Grid.Column="1" RowDefinitions="Auto,*">

                    <!-- Filter Tabs -->
                    <HorizontalStackLayout Grid.Row="0" Spacing="10" Margin="0,0,0,15">
                        <Button 
                            Clicked="OnAllClicked"
                            x:Name="All"
                            Style="{StaticResource HoverButtonStyle}"
                            Text="All"
                            BackgroundColor="#C41EAC"
                            TextColor="White"
                            FontAttributes="Bold"
                            HeightRequest="40"
                            CornerRadius="20"
                            Padding="20,0"/>
                        <Button 
                            Clicked="OnDangDienRaClicked"
                            x:Name="DangDienRa"
                            Style="{StaticResource HoverButtonStyle}"
                            Text="ðŸ”¥ Ongoing"
                            BackgroundColor="#C41E3A"
                            TextColor="White"
                            FontAttributes="Bold"
                            HeightRequest="40"
                            CornerRadius="20"
                            Padding="20,0"/>
                        <Button 
                            Clicked="OnSapToiClicked"
                            x:Name="SapToi"
                            Style="{StaticResource HoverButtonStyle}"
                            Text="ðŸ“… Upcoming"
                            BackgroundColor="#7B6A54"
                            TextColor="White"
                            FontAttributes="Bold"
                            HeightRequest="40"
                            CornerRadius="20"
                            Padding="20,0"/>
                        <Button 
                            Clicked="OnDaKetThucClicked"
                            x:Name="DaKetThuc"
                            Style="{StaticResource HoverButtonStyle}"
                            Text="ðŸ“¦ Ended"
                            BackgroundColor="#D4BFAA"
                            TextColor="#4B3621"
                            FontAttributes="Bold"
                            HeightRequest="40"
                            CornerRadius="20"
                            Padding="20,0"/>
                    </HorizontalStackLayout>

                    <!-- Promotions List (static) -->
                    <ScrollView Grid.Row="1">
                        <VerticalStackLayout Spacing="10">
                            <CollectionView ItemsSource="{Binding VoucherVM.Vouchers}" Margin="20">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <!-- Æ¯u Ä‘Ã£i -->
                                        <Frame Padding="15"
                                            BorderColor="#F2E2D6"
                                            CornerRadius="10"
                                            HasShadow="False">
                                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto">
                                                <VerticalStackLayout Grid.Column="0" Grid.Row="0">
                                                    <Label 
                                                        Text="{Binding Code, StringFormat='{}Voucher code: {0:0}'}"
                                                        TextColor="#FFFFFF"
                                                        FontSize="16"
                                                        FontAttributes="Bold"/>
                                                    <Label 
                                                        Text="{Binding Name}"
                                                        TextColor="#FFFFFF"
                                                        FontSize="14"/>
                                                </VerticalStackLayout>
                                                <Label Grid.Column="1" Grid.Row="0"
                                                    Text="{Binding DiscountValue, StringFormat='{}Discount value: ${0:0.00}'}"
                                                    TextColor="#FFFFFF"
                                                    FontSize="18"
                                                    FontAttributes="Bold"
                                                    VerticalOptions="Center"/>
                                                <Label Grid.Column="0" Grid.Row="1"
                                                    Grid.ColumnSpan="2"
                                                    Text="{Binding StartDate, StringFormat='{}From Date: {0:dd/MM/yyyy} , time start: {0:hh}h{0:mm}m'}"
                                                    TextColor="#FFFFFF"
                                                    FontSize="14"
                                                    Margin="0,10,0,0"/>
                                                <Label Grid.Column="0" Grid.Row="2"
                                                    Grid.ColumnSpan="2"
                                                    Text="{Binding EndDate, StringFormat='{}To Date: {0:dd/MM/yyyy} , time end: {0:hh}h{0:mm}m'}"
                                                    TextColor="#FFFFFF"
                                                    FontSize="14"
                                                    Margin="0,10,0,0"/>
                                            </Grid>
                                        </Frame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>


                        </VerticalStackLayout>
                    </ScrollView>

                </Grid>
            </Grid>
        </Frame>

    </Grid>

</ContentPage>
