<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PBL3MAUIApp.Views.ManagerView.PromotionPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="#F7EFE9"
    xmlns:viewModels="clr-namespace:PBL3MAUIApp.ViewModels"
    ControlTemplate="{StaticResource SharedManagerPageTemplate}">

    <ContentPage.BindingContext>
        <viewModels:CashierViewModel />
    </ContentPage.BindingContext>

    <Grid Margin="{DynamicResource DynamicMargin_Main}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!--  Tiêu đề  -->
            <RowDefinition Height="*" />
            <!--  Nội dung chính  -->
        </Grid.RowDefinitions>

        <!--  Tiêu đề  -->
        <Label
            Grid.Row="0"
            FontAttributes="Bold"
            FontSize="{DynamicResource DynamicFontSizeTitle}"
            HorizontalOptions="Center"
            Text="VOUCHER MANAGMENT 🎁"
            TextColor="Black"
            TextTransform="Uppercase" />

        <!--  Frame chứa nội dung chính  -->
        <Frame
            Grid.Row="1"
            Margin="{DynamicResource DynamicMargin}"
            Padding="{DynamicResource DynamicPadding}"
            BackgroundColor="#FFFFFF"
            BorderColor="Brown"
            CornerRadius="{DynamicResource DynamicCornerRadius}"
            HasShadow="False">
            <Grid
                BackgroundColor="Transparent"
                ColumnDefinitions="*, 2*, *"
                ColumnSpacing="{DynamicResource DynamicSpacing}">
                <!--  Cột 1: Thêm ưu đãi  -->
                <Frame
                    Grid.Column="0"
                    Padding="{DynamicResource DynamicPadding}"
                    BackgroundColor="#4B3621"
                    CornerRadius="{DynamicResource DynamicCornerRadius}"
                    HasShadow="False">
                    <Grid RowSpacing="{DynamicResource DynamicSpacing}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <!--  Tiêu đề  -->
                            <RowDefinition Height="Auto" />
                            <!--  Tên ưu đãi  -->
                            <RowDefinition Height="Auto" />
                            <!--  Mã ưu đãi  -->
                            <RowDefinition Height="Auto" />
                            <!--  Mô tả  -->
                            <RowDefinition Height="Auto" />
                            <!--  Số tiền ưu đãi  -->
                            <RowDefinition Height="Auto" />
                            <!--  Ngày bắt đầu / kết thúc  -->
                            <RowDefinition Height="Auto" />
                            <!--  Nút Thêm  -->
                            <RowDefinition Height="*" />
                            <!--  Khoảng trống  -->
                        </Grid.RowDefinitions>
                        <Label
                            Grid.Row="0"
                            FontAttributes="Bold"
                            FontSize="{DynamicResource DynamicFontSizeLarge}"
                            Text="ADD NEW VOUCHER"
                            TextColor="White" />

                        <!--  Tên ưu đãi  -->
                        <Border
                            Grid.Row="1"
                            Padding="{DynamicResource DynamicPadding}"
                            Stroke="White"
                            StrokeThickness="1">
                            <Entry
                                x:Name="AddName"
                                FontSize="{DynamicResource DynamicFontSizeMedium}"
                                Placeholder="Voucher name"
                                TextColor="White"
                                VerticalOptions="Fill" />
                        </Border>

                        <!--  Mã ưu đãi  -->
                        <Border
                            Grid.Row="2"
                            Padding="{DynamicResource DynamicPadding}"
                            Stroke="White"
                            StrokeThickness="1">
                            <Entry
                                x:Name="AddCode"
                                FontSize="{DynamicResource DynamicFontSizeMedium}"
                                Placeholder="Voucher code"
                                TextColor="White"
                                VerticalOptions="Fill" />
                        </Border>

                        <!--  Mô tả  -->
                        <Border
                            Grid.Row="3"
                            Padding="{DynamicResource DynamicPadding}"
                            Stroke="White"
                            StrokeThickness="1">
                            <Editor
                                x:Name="AddDescription"
                                AutoSize="TextChanges"
                                Placeholder="Description"
                                TextColor="White"
                                VerticalOptions="Fill" />
                        </Border>

                        <!--  Số tiền ưu đãi  -->
                        <Border
                            Grid.Row="4"
                            Padding="{DynamicResource DynamicPadding}"
                            Stroke="White"
                            StrokeThickness="1">
                            <Entry
                                x:Name="AddDiscount"
                                FontSize="{DynamicResource DynamicFontSizeMedium}"
                                Placeholder="Price (USD)"
                                TextColor="White"
                                VerticalOptions="Fill" />
                        </Border>

                        <!--  Ngày bắt đầu / kết thúc  -->
                        <Grid
                            Grid.Row="5"
                            ColumnDefinitions="*,*"
                            ColumnSpacing="{DynamicResource DynamicSpacing}">
                            <Border
                                Padding="{DynamicResource DynamicPadding}"
                                Stroke="White"
                                StrokeThickness="1">
                                <DatePicker
                                    x:Name="AddStart"
                                    FontSize="{DynamicResource DynamicFontSizeMedium}"
                                    TextColor="White"
                                    VerticalOptions="Fill" />
                            </Border>
                            <Border
                                Grid.Column="1"
                                Padding="{DynamicResource DynamicPadding}"
                                Stroke="White"
                                StrokeThickness="1">
                                <DatePicker
                                    x:Name="AddEnd"
                                    FontSize="{DynamicResource DynamicFontSizeMedium}"
                                    TextColor="White"
                                    VerticalOptions="Fill" />
                            </Border>
                        </Grid>
                        <Button
                            x:Name="AddButton"
                            Grid.Row="6"
                            Padding="{DynamicResource DynamicPadding}"
                            BackgroundColor="#FFFF99"
                            Clicked="AddButton_Clicked"
                            CornerRadius="{DynamicResource DynamicCornerRadius}"
                            FontSize="{DynamicResource DynamicFontSizeMedium}"
                            HorizontalOptions="Center"
                            Text="Add"
                            TextColor="Black" />
                    </Grid>
                </Frame>

                <!--  Cột 2: Danh sách ưu đãi  -->
                <Grid Grid.Column="1" RowSpacing="{DynamicResource DynamicSpacing}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <!--  Bộ lọc  -->
                        <RowDefinition Height="*" />
                        <!--  Danh sách  -->
                    </Grid.RowDefinitions>
                    <!--  Bộ lọc  -->
                    <Grid
                        Grid.Row="0"
                        ColumnDefinitions="*,*,*,*"
                        ColumnSpacing="{DynamicResource DynamicSpacing}">
                        <Button
                            x:Name="All"
                            Clicked="OnAllClicked"
                            Style="{StaticResource HoverButtonStyle}"
                            Grid.Column="0"
                            Padding="{DynamicResource DynamicPadding}"
                            BackgroundColor="#C41E3A"
                            CornerRadius="{DynamicResource DynamicCornerRadius}"
                            FontAttributes="Bold"
                            FontSize="{DynamicResource DynamicFontSizeLarge}"
                            HeightRequest="{DynamicResource DynamicButtonHeight}"
                            Text="All"
                            TextColor="White" />
                        <Button
                            x:Name="DangDienRa"
                            Clicked="OnDangDienRaClicked"
                            Style="{StaticResource HoverButtonStyle}"
                            Grid.Column="1"
                            Padding="{DynamicResource DynamicPadding}"
                            BackgroundColor="#C41E3A"
                            CornerRadius="{DynamicResource DynamicCornerRadius}"
                            FontAttributes="Bold"
                            FontSize="{DynamicResource DynamicFontSizeLarge}"
                            HeightRequest="{DynamicResource DynamicButtonHeight}"
                            Text="🔥 Ongoing"
                            TextColor="White" />
                        <Button
                            x:Name="SapToi"
                            Clicked="OnSapToiClicked"
                            Style="{StaticResource HoverButtonStyle}"
                            Grid.Column="2"
                            Padding="{DynamicResource DynamicPadding}"
                            BackgroundColor="#7B6A54"
                            CornerRadius="{DynamicResource DynamicCornerRadius}"
                            FontAttributes="Bold"
                            FontSize="{DynamicResource DynamicFontSizeLarge}"
                            HeightRequest="{DynamicResource DynamicButtonHeight}"
                            Text="📅 Upcoming"
                            TextColor="White" />
                        <Button
                            x:Name="DaKetThuc"
                            Clicked="OnDaKetThucClicked"
                            Style="{StaticResource HoverButtonStyle}"
                            Grid.Column="3"
                            Padding="{DynamicResource DynamicPadding}"
                            BackgroundColor="#D4BFAA"
                            CornerRadius="{DynamicResource DynamicCornerRadius}"
                            FontAttributes="Bold"
                            FontSize="{DynamicResource DynamicFontSizeLarge}"
                            HeightRequest="{DynamicResource DynamicButtonHeight}"
                            Text="📦 Ended"
                            TextColor="#4B3621" />
                    </Grid>

                    <!--  Danh sách ưu đãi  -->
                    <ScrollView Grid.Row="1">
                        <Grid RowSpacing="{DynamicResource DynamicSpacing}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <!--  Ưu đãi 1  -->
                                <RowDefinition Height="Auto" />
                                <!--  Ưu đãi 2  -->
                                <RowDefinition Height="Auto" />
                                <!--  Ưu đãi 3  -->
                                <RowDefinition Height="*" />
                                <!--  Khoảng trống  -->
                            </Grid.RowDefinitions>
                            <!--  Ưu đãi  -->
                            <CollectionView ItemsSource="{Binding VoucherVM.Vouchers}" Margin="20">
                                <CollectionView.ItemTemplate>
                                    <DataTemplate>
                                        <Frame
                                            Grid.Row="0"
                                            Padding="{DynamicResource DynamicPadding}"
                                            BorderColor="#F2E2D6"
                                            CornerRadius="{DynamicResource DynamicCornerRadius}"
                                            HasShadow="False">
                                            <Frame.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="OnPromotionTapped"/>
                                            </Frame.GestureRecognizers>
                                            <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                                                <VerticalStackLayout Grid.Row="0" Grid.Column="0">
                                                    <Label
                                                        FontAttributes="Bold"
                                                        FontSize="{DynamicResource DynamicFontSizeMedium}"
                                                        Text="{Binding Name}"
                                                        TextColor="#fff" />
                                                    <Label
                                                        FontSize="{DynamicResource DynamicFontSizeSmall}"
                                                        Text="{Binding Code}"
                                                        TextColor="#fff" />
                                                </VerticalStackLayout>
                                                <Label
                                                    Grid.Row="0"
                                                    Grid.Column="1"
                                                    FontAttributes="Bold"
                                                    FontSize="{DynamicResource DynamicFontSizeMedium}"
                                                    Text="{Binding DiscountValue, StringFormat='{}Discount ${0:0.00}'}"
                                                    TextColor="#fff"
                                                    VerticalOptions="Center" />
                                                <Label
                                                    Grid.Row="1"
                                                    Grid.Column="0"
                                                    Grid.ColumnSpan="2"
                                                    FontSize="{DynamicResource DynamicFontSizeSmall}"
                                                    Text="{Binding Description}"
                                                    TextColor="#fff" />
                                            </Grid>
                                        </Frame>
                                    </DataTemplate>
                                </CollectionView.ItemTemplate>
                            </CollectionView>
                        </Grid>
                    </ScrollView>
                </Grid>

                <!--  Cột 3: Thông tin chi tiết ưu đãi  -->
                <Frame
                    Grid.Column="2"
                    Padding="{DynamicResource DynamicPadding}"
                    BackgroundColor="#4B3621"
                    CornerRadius="{DynamicResource DynamicCornerRadius}"
                    HasShadow="False">
                    <Grid RowSpacing="{DynamicResource DynamicSpacing}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <!--  Tiêu đề  -->
                            <RowDefinition Height="Auto" />
                            <!--  Tên ưu đãi  -->
                            <RowDefinition Height="Auto" />
                            <!--  Mã ưu đãi  -->
                            <RowDefinition Height="Auto" />
                            <!--  Mô tả  -->
                            <RowDefinition Height="Auto" />
                            <!--  Số tiền ưu đãi  -->
                            <RowDefinition Height="Auto" />
                            <!--  Ngày bắt đầu / kết thúc  -->
                            <RowDefinition Height="Auto" />
                            <!--  Nút  -->
                            <RowDefinition Height="*" />
                            <!--  Khoảng trống  -->
                        </Grid.RowDefinitions>
                        <Label
                            Grid.Row="0"
                            FontAttributes="Bold"
                            FontSize="{DynamicResource DynamicFontSizeLarge}"
                            Text="THÔNG TIN ƯU ĐÃI"
                            TextColor="White" />

                        <!--  Tên ưu đãi  -->
                        <Border
                            Grid.Row="1"
                            Padding="{DynamicResource DynamicPadding}"
                            Stroke="White"
                            StrokeThickness="1">
                            <Entry
                                x:Name="EditName"
                                FontSize="{DynamicResource DynamicFontSizeMedium}"
                                IsEnabled="False"
                                Text="None"
                                TextColor="White"
                                VerticalOptions="Fill" />
                        </Border>

                        <!--  Mã ưu đãi  -->
                        <Border
                            Grid.Row="2"
                            Padding="{DynamicResource DynamicPadding}"
                            Stroke="White"
                            StrokeThickness="1">
                            <Entry
                                x:Name="EditCode"
                                FontSize="{DynamicResource DynamicFontSizeMedium}"
                                IsEnabled="False"
                                Text="None"
                                TextColor="White"
                                VerticalOptions="Fill" />
                        </Border>

                        <!--  Mô tả  -->
                        <Border
                            Grid.Row="3"
                            Padding="{DynamicResource DynamicPadding}"
                            Stroke="White"
                            StrokeThickness="1">
                            <Editor
                                x:Name="EditDescription"
                                AutoSize="TextChanges"
                                FontSize="{DynamicResource DynamicFontSizeMedium}"
                                IsEnabled="False"
                                Text="None"
                                TextColor="White"
                                VerticalOptions="Fill" />
                        </Border>

                        <!--  Số tiền ưu đãi  -->
                        <Border
                            Grid.Row="4"
                            Padding="{DynamicResource DynamicPadding}"
                            Stroke="White"
                            StrokeThickness="1">
                            <Entry
                                x:Name="EditDiscount"
                                FontSize="{DynamicResource DynamicFontSizeMedium}"
                                IsEnabled="False"
                                Text="None"
                                TextColor="White"
                                VerticalOptions="Fill" />
                        </Border>

                        <!--  Ngày bắt đầu / kết thúc  -->
                        <Grid
                            Grid.Row="5"
                            ColumnDefinitions="*,*"
                            ColumnSpacing="{DynamicResource DynamicSpacing}">
                            <Border
                                Padding="{DynamicResource DynamicPadding}"
                                Stroke="White"
                                StrokeThickness="1">
                                <DatePicker
                                    x:Name="EditStart"
                                    Date="0001-01-01"
                                    FontSize="{DynamicResource DynamicFontSizeMedium}"
                                    IsEnabled="False"
                                    TextColor="White"
                                    VerticalOptions="Fill" />
                            </Border>
                            <Border
                                Grid.Column="1"
                                Padding="{DynamicResource DynamicPadding}"
                                Stroke="White"
                                StrokeThickness="1">
                                <DatePicker
                                    x:Name="EditEnd"
                                    Date="0001-01-01"
                                    FontSize="{DynamicResource DynamicFontSizeMedium}"
                                    IsEnabled="False"
                                    TextColor="White"
                                    VerticalOptions="Fill" />
                            </Border>
                        </Grid>
                        <Grid
                            Grid.Row="6"
                            ColumnDefinitions="*,*"
                            ColumnSpacing="{DynamicResource DynamicSpacing}"
                            HorizontalOptions="Center">
                            <Button
                                x:Name="SaveButton"
                                Grid.Column="0"
                                Padding="{DynamicResource DynamicPadding}"
                                BackgroundColor="#D3D3D3"
                                Clicked="SaveButton_Clicked"
                                FontSize="{DynamicResource DynamicFontSizeMedium}"
                                Text="Save"
                                TextColor="Black" />
                            <Button
                                x:Name="DeleteButton"
                                Grid.Column="1"
                                Padding="{DynamicResource DynamicPadding}"
                                BackgroundColor="#FF6347"
                                Clicked="DeleteButton_Clicked"
                                FontSize="{DynamicResource DynamicFontSizeMedium}"
                                Text="Delete"
                                TextColor="White" />
                        </Grid>
                    </Grid>
                </Frame>
            </Grid>
        </Frame>
    </Grid>
</ContentPage>
