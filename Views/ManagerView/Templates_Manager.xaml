<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    x:Class="PBL3MAUIApp.Views.ManagerView.Templates_Manager"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ControlTemplate x:Key="SharedManagerPageTemplate">
        <Grid>
            <!-- Phân chia lưới 2 dòng: Navbar và Content -->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!-- NavigationBar -->
                <RowDefinition Height="*" />
                <!-- Page Content -->
            </Grid.RowDefinitions>

            <!-- Navigation Bar -->
            <Grid 
                Grid.Row="0"
                BackgroundColor="#5D4037"
                HeightRequest="{DynamicResource NavBoxSize}"
                Padding="20,0"
                ZIndex="2">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <BoxView 
                    Color="Transparent" 
                    Grid.Column="1" />  

                <!-- Menu Items -->
                <FlexLayout Direction="Row"
                    AlignItems="Center"
                    JustifyContent="End"
                    Wrap="NoWrap"
                    Grid.Column="2"
                    HorizontalOptions="Fill"
                    VerticalOptions="Fill"
                    Margin="0,0,0,0">

                    <Label Text="Trang chủ" Style="{StaticResource MenuItemStyle}" x:Name="MyLabel">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnHomeClicked" />
                        </Label.GestureRecognizers>
                    </Label>

                    <Label Text="Sản phẩm" Style="{StaticResource MenuItemStyle}">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnProductClicked" />
                        </Label.GestureRecognizers>
                    </Label>

                    <Label Text="Nhân viên" Style="{StaticResource MenuItemStyle}">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnStaffClicked" />
                        </Label.GestureRecognizers>
                    </Label>

                    <Label Text="Ca làm" Style="{StaticResource MenuItemStyle}">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnShiftClicked" />
                        </Label.GestureRecognizers>
                    </Label>

                    <Label Text="Ưu đãi" Style="{StaticResource MenuItemStyle}">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnPromotionClicked" />
                        </Label.GestureRecognizers>
                    </Label>

                    <Label Text="Đơn hàng" Style="{StaticResource MenuItemStyle}">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnOrderClicked" />
                        </Label.GestureRecognizers>
                    </Label>

                    <Label Text="Doanh thu" Style="{StaticResource MenuItemStyle}">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnRevenueClicked" />
                        </Label.GestureRecognizers>
                    </Label>

                    <Label Text="Tài khoản" Style="{StaticResource MenuItemStyle}">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnAccountClicked" />
                        </Label.GestureRecognizers>
                    </Label>

                </FlexLayout>

            </Grid>

            <ContentPresenter Grid.Row="1"
                Margin="0"
                ZIndex="2" />

        </Grid>
    </ControlTemplate>

    <!-- Style cho các menu item -->
    <Style x:Key="MenuItemStyle" TargetType="Label">
        <Setter Property="FontSize" Value="{DynamicResource MenuFontSize}" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="Margin" Value="{DynamicResource MenuItemMargin}" />
        <Setter Property="Padding" Value="{DynamicResource MenuItemPadding}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal" />
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="#795548" />
                            <Setter Property="TextColor" Value="#FFEB3B" />
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>

    <Style TargetType="Button" x:Key="HoverButtonStyle">
        <!-- Các thuộc tính mặc định cho nút -->
        <Setter Property="BackgroundColor" Value="#4B3621"/>
        <Setter Property="TextColor" Value="White"/>
        <Setter Property="VisualStateManager.VisualStateGroups">
            <VisualStateGroupList>
                <VisualStateGroup x:Name="CommonStates">
                    <VisualState x:Name="Normal"/>
                    <VisualState x:Name="PointerOver">
                        <VisualState.Setters>
                            <Setter Property="BackgroundColor" Value="#ACC629"/>
                            <Setter Property="TextColor" Value="#FFFFFF"/>
                        </VisualState.Setters>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateGroupList>
        </Setter>
    </Style>
</ResourceDictionary>
