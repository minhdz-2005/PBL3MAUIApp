        <!--  Thống kê theo sản phẩm  -->
        <Grid
      Grid.Row="2"
      ColumnDefinitions="*,*,*"
      HorizontalOptions="Center"
      IsVisible="False"
      RowDefinitions="Auto,Auto,Auto">
            <Grid Grid.Row="0" Grid.ColumnSpan="3">
                <HorizontalStackLayout>
                    <Label
            Text="Lọc tất cả"
            TextColor="Black"
            VerticalOptions="Center" />
                    <Border VerticalOptions="Center">
                        <Entry Placeholder="Tất cả" />
                    </Border>
                </HorizontalStackLayout>

            </Grid>

            <Grid
        Grid.Row="1"
        Grid.Column="0"
        ColumnDefinitions="*,*">
                <Label
          Grid.Column="0"
          FontSize="18"
          HorizontalOptions="End"
          Text="Ngày bắt đầu"
          TextColor="Black"
          VerticalOptions="Center" />
                <Border
          Grid.Column="1"
          HorizontalOptions="Start"
          VerticalOptions="Center">
                    <Entry Placeholder="DD/MM/YYYY" />
                </Border>
            </Grid>

            <Grid
        Grid.Row="1"
        Grid.Column="1"
        ColumnDefinitions="*,*">
                <Label
          Grid.Column="0"
          FontSize="18"
          HorizontalOptions="End"
          Text="Ngày kết thúc"
          TextColor="Black"
          VerticalOptions="Center" />
                <Border
          Grid.Column="1"
          HorizontalOptions="Start"
          VerticalOptions="Center">
                    <Entry Placeholder="DD/MM/YYYY" />
                </Border>
            </Grid>
            <Button Grid.Row="2" Text="Tìm" />
        </Grid>
        <Border Grid.Row="3" IsVisible="False">
            <ScrollView>
                <Grid RowDefinitions="Auto,*,Auto">
                    <Grid
            Grid.Row="0"
            ColumnDefinitions="Auto,Auto"
            RowDefinitions="*,*">
                        <Label
              Grid.Row="0"
              Grid.Column="0"
              FontSize="18"
              Text="Tổng doanh thu:...."
              TextColor="Black" />
                        <Label
              Grid.Row="0"
              Grid.Column="1"
              Text="10.000.000đ"
              TextColor="Black" />
                        <Label
              Grid.Row="1"
              Grid.Column="0"
              FontSize="18"
              Text="Ngày cao nhất: DD/MM/YYYY"
              TextColor="Black" />
                        <Label
              Grid.Row="1"
              Grid.Column="1"
              FontSize="18"
              Text="Tổng chiết khấu:..... "
              TextColor="Black" />
                    </Grid>
                    <Grid Grid.Row="1" RowDefinitions="Auto,Auto">
                        <!--  Dữ liệu được nhập cho nhóm món  -->
                        <Border Grid.Row="0">
                            <Grid RowDefinitions="Auto,Auto">
                                <Grid Grid.Row="0" ColumnDefinitions="*,*,*">
                                    <Label
                    Grid.Column="0"
                    FontSize="20"
                    Text="Nhóm món"
                    TextColor="Black" />
                                    <Label
                    Grid.Column="1"
                    FontSize="20"
                    Text="Số lượng"
                    TextColor="Black" />
                                    <Label
                    Grid.Column="2"
                    FontSize="20"
                    Text="Doanh thu"
                    TextColor="Black" />
                                </Grid>
                                <VerticalStackLayout Grid.Row="1">
                                    <!--  data duoc nhap trong verticalStackLayout  -->
                                    <Grid ColumnDefinitions="*,*,*">
                                        <Label
                      Grid.Column="0"
                      FontSize="18"
                      Text="Ca phe"
                      TextColor="Black" />
                                        <Label
                      Grid.Column="1"
                      FontSize="18"
                      Text="5"
                      TextColor="Black" />
                                        <Label
                      Grid.Column="2"
                      FontSize="18"
                      Text="5.000.000"
                      TextColor="Black" />
                                    </Grid>
                                </VerticalStackLayout>
                            </Grid>
                        </Border>
                        <!--  Dữ liệu được nhập cho từng loại món  -->
                        <Border Grid.Row="1">
                            <Grid RowDefinitions="Auto,Auto">
                                <Grid Grid.Row="0" ColumnDefinitions="*,*,*">
                                    <Label
                    Grid.Column="0"
                    FontSize="20"
                    Text="Tên món"
                    TextColor="Black" />
                                    <Label
                    Grid.Column="1"
                    FontSize="20"
                    Text="Đã bán"
                    TextColor="Black" />
                                    <Label
                    Grid.Column="2"
                    FontSize="20"
                    Text="Doanh thu"
                    TextColor="Black" />
                                </Grid>
                                <VerticalStackLayout Grid.Row="1">
                                    <!--  data duoc nhap trong verticalStackLayout  -->
                                    <Grid ColumnDefinitions="*,*,*">
                                        <Label
                      Grid.Column="0"
                      FontSize="18"
                      Text="Ca phe"
                      TextColor="Black" />
                                        <Label
                      Grid.Column="1"
                      FontSize="18"
                      Text="5"
                      TextColor="Black" />
                                        <Label
                      Grid.Column="2"
                      FontSize="18"
                      Text="5.000.000"
                      TextColor="Black" />
                                    </Grid>
                                </VerticalStackLayout>
                            </Grid>
                        </Border>

                    </Grid>
                </Grid>
            </ScrollView>
        </Border>

    </Grid>
</ContentPage>
