<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PBL3MAUIApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PBL3MAUIApp"
    xmlns:loginViews="clr-namespace:PBL3MAUIApp.Views.LoginView"
    Shell.FlyoutBehavior="Disabled"
    Title="PBL3MAUIApp">

    <ShellContent
        ContentTemplate="{DataTemplate loginViews:LoginView}"
        Route="LoginView" />
    <ShellContent
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
</Shell>
